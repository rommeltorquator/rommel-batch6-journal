<h1 class="text-center my-4 dark-font display-4 font-weight-bold"><%= @category.title %></h1>

<p class="text-center">
    <%= link_to 'Edit', edit_category_path(@category) %> |
    <%= link_to "Add a task", categories_path %> |
    <%= link_to "go back", categories_path %> |
    <%= link_to @category, method: :delete, data: { confirm: 'Are you sure?' } do %>Burahin ito<% end %>
</p>

<div class="container">

    <h1>Tasks of <%= @category.title %></h1>

    <br/>
    <br/>

    <% @category.tasks.each do |task| %>
        <p><%= task.id %></p>
        <p><%= task.title %></p>
        <p><%= task.description %></p>
        <p><%= task.deadline %></p>
        <p><%= task.status %></p>
        <%= link_to 'Delete', task, method: :delete, data: { confirm: 'Are you sure?' }, class: "btn btn-danger" %>
        <br/>
        <br/>
        <br/>
    <%end%>
    <hr/>

    <%= form_with scope: :task, model: @category.tasks.build , local: true do |form| %>
        <%= hidden_field_tag :category_id, @category.id %>

        <div class="form-group">
            <%= form.text_field :title, placeholder: "Title", class: "form-control" %>
        </div>

        <div class="form-group">
            <p><%= form.text_area :description, placeholder: "Description", class: "form-control", rows: 10 %></p>
        </div>

        <div class="form-group">
            <p><%= form.date_field :deadline, class: "form-control" %></p>
        </div> 

        <div class="form-group">
            <p><%= form.select :status, Task.statuses.keys, {}, { :class => 'form-control' } %></p>
        </div>

        <%= form.submit class: "btn btn-dark" %>
    <% end %>
</div>