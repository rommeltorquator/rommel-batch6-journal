<h2 class="text-center my-3 dark-font display-4 font-weight-bold"><%= t('navigation.sign_in') %></h2>

<div class="container">
  <div class="row">
    <div class="col-md-4 offset-md-4 p-4 bg-white" style="border: 1px solid rgb(211, 211, 211);">
      <!-- <h2 class="text-center devise-headings">Sign in</h2> -->

      <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
        <div class="field form-group">
          <%= f.label :email, class: "devise-headings" %><br />
          <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "form-control" %>
        </div>

        <div class="field form-group">
          <%= f.label :password, class: "devise-headings" %><br />
          <%= f.password_field :password, autocomplete: "current-password", class: "form-control" %>
        </div>

        <%# if devise_mapping.rememberable? %>
          <!-- <div class="field form-group"> -->
            <%#= f.check_box :remember_me, class: "checkbox" %>
            <%#= f.label :remember_me, class: "devise-headings" %>
          <!-- </div> -->
        <%# end %>

        <div class="actions">
          <%= f.submit "Sign in", class: "btn btn-outline-success w-100" %>
        </div>
      <% end %>

      <%#= render "devise/shared/links" %>
    </div>
  </div>
</div>
