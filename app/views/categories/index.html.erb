<% if flash[:task_error] %>
  <div class="container mt-4">
    <div class="row">
      <div class="col-md-4 offset-md-4">
        <ul class="task-error">
          <% flash[:task_error].each do |error| %>
            <li class="text-danger"><%= error %></li>
          <% end %>
        </ul>
      </div>
    </div>
  </div>
<% end %>

<h1 class="<%= 'mt-4' if flash[:task_error].nil? %> text-center mb-4 dark-font display-4 font-weight-bold">Categories</h1>

<div class="bg-gray">
  <div class="container">
    <div class="row pb-4">
      <% @categories.each do |category| %>
        <div class="col-sm-3 pt-4">
          <div class="card">
            <div class="card-body d-flex flex-column justify-content-center align-items-center">
              <h4 class="card-title text-center"><%= link_to category.title, category_path(category), class: "category-link"  %></h4>

              <% if category.tasks.count > 0 %>
                <p class="card-text text-center">Completed tasks: <%= category.tasks.where(status: 'completed').count %> of <%= category.tasks.count %></p>

                <p class="card-text text-center"><button type="button" class="btn btn-outline-success" data-toggle="modal" data-target="#exampleModalScrollable<%= category.id %>">+ Add a task</button></p>
              <% else %>
                <p class="card-text text-center">No tasks</p>
                <p class="card-text text-center"><button type="button" class="btn btn-outline-success" data-toggle="modal" data-target="#exampleModalScrollable<%= category.id %>">+ Add a task</button></p>
              <% end %>

              <p class="card-text text-center"><%= link_to category, method: :delete, data: { confirm: 'Are you sure?' }, class: "text-danger" do %><i class="fa fa-trash"></i> Delete<% end %></p>
            </div>
          </div>
        </div>

        <!-- add task Modal -->
        <div class="modal fade" id="exampleModalScrollable<%= category.id %>" tabindex="-1" role="dialog"
                    aria-labelledby="exampleModalScrollableTitle<%= category.id %>" aria-hidden="true">
          <div class="modal-dialog modal-dialog-centered" role="document">
            <div class="modal-content">
              <div class="modal-header">
                <h5 class="modal-title" id="exampleModalScrollableTitle<%= category.id %>">Add a task for <%= category.title %></h5>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                  <span aria-hidden="true">&times;</span>
                </button>
              </div>
              <div class="modal-body">
                <%= form_with scope: :task, model: category.tasks.build , local: true do |form| %>
                  <%= hidden_field_tag :category_id, category.id %>

                  <div class="form-group">
                    <%= form.text_field :title, placeholder: "Title", class: "form-control" %>
                  </div>

                  <div class="form-group">
                    <p><%= form.text_area :description, placeholder: "Description", class: "form-control", rows: 10 %></p>
                  </div>

                  <div class="form-group">
                    <p><%= form.date_field :deadline, class: "form-control" %></p>
                  </div>

                  <div class="form-group">
                    <p><%= form.select :status, Task.statuses.keys, {}, { :class => 'form-control' } %></p>
                  </div>

                  <%= form.submit class: "btn btn-outline-success w-100" %>
                <% end %>
              </div>
            </div>
          </div>
        </div>
         <!-- add task modal -->
      <% end %> <!-- categories loop -->

      <div class="col-sm-3 d-flex align-items-center mt-4">
        <button type="button" class="btn btn-outline-light w-100" data-toggle="modal" data-target="#exampleModalScrollable">+ Create new category</button>
      </div>

      <!-- create category Modal -->
      <div class="modal fade" id="exampleModalScrollable" tabindex="-1" role="dialog"
                aria-labelledby="exampleModalScrollableTitle" aria-hidden="true">
        <div class="modal-dialog modal-dialog-centered" role="document">
          <div class="modal-content">
            <div class="modal-header">
              <h4 class="modal-title devise-headings" id="exampleModalScrollableTitle">Add a category</h4>
              <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                <span aria-hidden="true">&times;</span>
              </button>
            </div>

            <div class="modal-body">
              <% if flash[:task_error] %>
                <ul>
                  <% flash[:task_error].each do |error| %>
                    <li class="text-danger"><%= error %></li>
                  <% end %>
                </ul>
              <% end %>

              <%= form_with scope: :category, model: @categories.build do |form| %>
                <div class="form-group">
                  <%= form.label :title, class: "devise-headings" %>
                  <%= form.text_field :title, class: "form-control" %>
                </div>

                <%= form.submit class: "btn btn-outline-success w-100" %>
              <% end %>
            </div>
          </div>
        </div>
      </div>
       <!-- create category modal -->
    </div>
     <!-- row -->
  </div>
   <!-- container -->
</div>
 <!-- bg-green -->
